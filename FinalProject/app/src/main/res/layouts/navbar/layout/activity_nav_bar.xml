<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.navBarActivity">
    <data>
        <variable
            name="clickHandler"
            type="project.example.efriendly.activities.navBarActivity.NavbarClickHandler" />
    </data>
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/green"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/home_nav"
            android:background="@color/green"
            />
        <ImageButton
            android:onClick="@{clickHandler::homeClick}"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_weight="0.25"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/store_nav"
            />
        <ImageButton
            android:onClick="@{clickHandler::notificationClick}"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_weight="0.25"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/noti_nav"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_weight="0.25"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/profile_nav"
            />
    </LinearLayout>
</layout>