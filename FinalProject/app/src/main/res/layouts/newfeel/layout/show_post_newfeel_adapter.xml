<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="23dp"
        android:paddingHorizontal="27dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/avt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:id="@+id/sellerAvt"
                    android:src="@drawable/avatar"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/sellerName"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Truong Trong Khanh"
                android:layout_toEndOf="@id/avt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="10dp"
                android:text = "12m"
                android:layout_toEndOf="@id/avt"
                android:layout_below="@id/sellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:text="Mo ta dai vailon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageSwitcher
            android:layout_marginTop="15dp"
            android:id="@+id/clothesImgs"
            android:layout_width="match_parent"
            android:background="@drawable/clothes_frame_showpost"
            android:padding="14dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/post_like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:text="95"
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="30 comments"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="14 shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:text="Like"
                android:drawableStart="@drawable/post_likebutton_icon"
                android:background="@color/button_background_while"
                android:textColor="@android:color/black"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Comment"
                android:drawableStart="@drawable/post_comment_icon"
                android:background="@color/button_background_while"
                android:textColor="@android:color/black"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="Share"
                android:drawableStart="@drawable/post_share_icon"
                android:background="@color/button_background_while"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>
</layout>
