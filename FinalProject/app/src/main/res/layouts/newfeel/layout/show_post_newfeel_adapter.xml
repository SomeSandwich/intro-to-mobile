<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="clickHandler"
            type="project.example.efriendly.adapter.NewfeelAdapter.PostNewFeelClickHandler" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/post"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="23dp"
            android:paddingHorizontal="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/avt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">
                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:id="@+id/sellerAvt"
                        android:src="@drawable/user"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/sellerName"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/avt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/time"
                    android:layout_toEndOf="@id/avt"
                    android:layout_below="@id/sellerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/des"
                android:layout_marginTop="15dp"
                android:text="Mo ta dai lam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:maxHeight="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:onClick="@{clickHandler::previousClick}"
                    android:contentDescription="@string/image"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:contentDescription="@string/image"
                    android:id="@+id/clothesImgs"
                    android:adjustViewBounds="true"
                    android:maxHeight="150dp"
                    android:minHeight="200dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"/>
                <ImageButton
                    android:onClick="@{clickHandler::nextPicClick}"
                    android:contentDescription="@string/image"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/post_like_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/likeCount"
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id ="@+id/CommentsCount"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/shareCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp"
                    android:text="Like"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/post_likebutton_icon"
                    android:textColor="@android:color/black"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:text="Comment"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/post_comment_icon"
                    android:textColor="@android:color/black"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="Share"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/post_share_icon"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/processBar"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
