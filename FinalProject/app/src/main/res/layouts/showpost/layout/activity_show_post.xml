<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.userFragments.ShowPost">
    <data>
        <variable
            name="clickHandler"
            type="project.example.efriendly.activities.userFragments.ShowPost.ShowPostClickHandler" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageSwitcher
            android:id="@+id/clothesImgs"
            android:layout_width="match_parent"
            android:background="@drawable/clothes_frame_showpost"
            android:padding="14dp"
            android:layout_weight="5"
            android:layout_margin="20dp"
            android:layout_height="0dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginHorizontal="27dp"
            android:gravity="center"
            android:layout_height="0dp">
            <TextView
                android:text="@string/legit"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/legitPoint"
                android:gravity="center"
                android:background="@drawable/circle_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/prices"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_weight="150"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/size"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/size"
                android:gravity="center"
                android:background="@drawable/circle_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/Des"
                    android:layout_below="@id/title"
                    android:orientation="vertical"
                    android:background="@drawable/clothes_frame_showpost"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/ClothesDes"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginBottom="40dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/title"
                    android:text="@string/detail"
                    android:layout_marginBottom="-38dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/avt"
                    android:layout_below="@id/Des"
                    android:layout_marginTop="-40dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:elevation="12dp"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">
                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:id="@+id/sellerAvt"
                        app:shapeAppearanceOverlay="@style/roundImageView"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/name"
                    android:textSize="28sp"
                    android:layout_below="@id/avt"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RatingBar
                    android:id="@+id/rating"
                    android:layout_below="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:numStars="5"
                    android:stepSize=".5"
                    style="@style/Base.Widget.AppCompat.RatingBar"
                    android:isIndicator="false"/>
                <LinearLayout
                    android:layout_below="@id/rating"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:onClick="@{clickHandler::addToCartClick}"
                        android:backgroundTint="@color/green"
                        android:text="@string/addToCart"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>
                    <Button
                        android:onClick="@{clickHandler::contactClick}"
                        android:backgroundTint="@color/green"
                        android:text="@string/Contact"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>